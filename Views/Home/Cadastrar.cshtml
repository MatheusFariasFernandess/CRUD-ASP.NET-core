@model CRUD.Models.Usuario;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1 class="text-primary">Cadastro de Usuario</h1>
    <hr>
      <form method="Post" class="w-25">
         <div class="form-group">
             <label for="txtNome">Nome:</label> <br>   
             <input asp-for="Nome" class="form-control"></input >
         </div>

         <div class=form-group>
              <label for="txtNome">E-mail:</label>
              <input asp-for="Email" class="form-control"></input>
         </div>

         <div class="mt-3">
             <button class="btn btn-primary" type="submit">Salvar</button>
             <a class="btn btn-light" asp-action="Usuarios">Cancelar</a>
         </div>
      </form>
</body>
</html>